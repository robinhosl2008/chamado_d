<?xml version="1.0" encoding="ISO-8859-1"?>
<config>
        <propel>
            <datasources default="tarefa">
                <datasource id="tarefa">
                    <!-- the Propel adapter (usually same as phptype of connection DSN) -->
                    <adapter>pgsql</adapter>
                    <connection>
                            <dsn>pgsql:host=localhost dbname=tarefa user=admin password=master</dsn>		            
		    </connection>
                </datasource>
            </datasources>
        </propel>
        <log>
            <type>file</type>
            <name>/var/www/tarefa/tmp/logs/propel.log</name>
            <ident>propel</ident>
            <level>2</level> <!-- PEAR_LOG_DEBUG -->
            <conf></conf>
        </log>
</config>